<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.enterprisedomain.workbench.ide.ecp"
            class="org.enterprisedomain.workbench.ide.NewECPProjectWizard"
            icon="platform:/plugin/org.eclipse.emf.ecp.ui/icons/checkout_project_old.gif"
            id="org.enterprisedomain.workbench.ide.newProjectWizard"
            name="ECP Project"
            project="true">
      </wizard>
      <category
            id="org.enterprisedomain.workbench.ide.ecp"
            name="ECP">
      </category>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <file-association
            content-type="org.eclipse.emf.ecore.xmi"
            file-extensions="xmi">
      </file-association>
      <file-association
            content-type="org.eclipse.emf.ecore"
            file-extensions="ecore,xmi">
      </file-association>
   </extension>
   <extension
         point="org.eclipse.ui.activities">
      <defaultEnablement
            id="org.eclipse.emf.ecp.application.e3.enablement">
      </defaultEnablement>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <perspectiveShortcut
               id="org.enterprisedomain.ecp.perspective">
         </perspectiveShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="org.enterprisedomain.workbench.ide.Startup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.emf.ecp.ui.modelElementOpener">
      <modelElementOpener
            class="org.enterprisedomain.workbench.ide.ModelElementOpener">
         <dynamicTester
               tester="org.enterprisedomain.workbench.ide.ModelElementOpenTester">
         </dynamicTester>
      </modelElementOpener>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.enterprisedomain.workbench.ide.ModelEditor"
            default="false"
            id="org.enterprisedomain.workbench.ide.modelEditor"
            name="Model Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.emf.ecp.application3x.perspective">
         <view
               id="org.eclipse.ui.console.ConsoleView"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.emf.ecp.ui.ModelRepositoriesView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.ide.editorAssociationOverride">
         <editorAssociationOverride
            id="org.enterprisedomain.workbench.ide.modelEditorAssociation"
            class="org.enterprisedomain.workbench.ide.ModelEditorAssociationOverride">
         </editorAssociationOverride>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.ui.ide.workbench"
            description="enterpriseDomain Workbench Application"
            name="enterpriseDomain Workbench">
         <property
               name="windowImages"
               value="platform:/plugin/org.eclipse.emf.ecp.ui.e3/icons/bricks.png">
         </property>
         <property
               name="appName"
               value="enterpriseDomain Workbench">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.eclipse.emf.ecp.ui.perspective.ECPPerspectiveFactory"
            id="org.enterprisedomain.ecp.perspective"
            name="ECP">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.emf.ecp.core.ECPProject"
            class="org.enterprisedomain.workbench.ide.ProjectAdapterFactory">
         <adapter
               type="org.enterprisedomain.classmaker.Contribution">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.enterprisedomain.workbench.ide.command.make"
            name="Make">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.enterprisedomain.workbench.ide.handler.MakeHandler"
            commandId="org.enterprisedomain.workbench.ide.command.make">
         <activeWhen>
            <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <test
                              property="org.eclipse.core.resources.projectNature"
                              value="org.enterprisedomain.classmaker.projectNature">
                        </test>
                     </adapt>
                  </iterate>
               </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="org.enterprisedomain.workbench.ide.command.make"
               style="push">
           <visibleWhen>
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <test
                              property="org.eclipse.core.resources.projectNature"
                              value="org.enterprisedomain.classmaker.projectNature">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   

</plugin>
