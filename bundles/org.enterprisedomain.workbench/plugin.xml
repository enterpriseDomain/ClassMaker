<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.enterprisedomain.workbench.ecp"
            class="org.enterprisedomain.workbench.NewECPProjectWizard"
            icon="platform:/plugin/org.eclipse.emf.ecp.ui/icons/checkout_project_old.gif"
            id="org.enterprisedomain.workbench.newProjectWizard"
            name="ECP Project"
            project="true">
      </wizard>
      <category
            id="org.enterprisedomain.workbench.ecp"
            name="ECP">
      </category>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <file-association
            content-type="org.eclipse.emf.ecore.xmi"
            file-extensions="xmi">
      </file-association>
      <file-association
            content-type="org.eclipse.emf.ecore"
            file-extensions="ecore,xmi">
      </file-association>
   </extension>
   <extension
         point="org.eclipse.ui.activities">
      <defaultEnablement
            id="org.eclipse.emf.ecp.application.e3.enablement">
      </defaultEnablement>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="org.enterprisedomain.workbench.Startup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.emf.ecp.ui.modelElementOpener">
      <modelElementOpener
            class="org.enterprisedomain.workbench.ModelElementOpener">
         <dynamicTester
               tester="org.enterprisedomain.workbench.ModelElementOpenTester">
         </dynamicTester>
      </modelElementOpener>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.emf.ecp.application3x.perspective">
         <view
               id="org.eclipse.ui.console.ConsoleView"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.emf.ecp.ui.ModelRepositoriesView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.ide.editorAssociationOverride">
         <editorAssociationOverride
            id="org.enterprisedomain.workbench.modelEditorAssociation"
            class="org.enterprisedomain.workbench.ModelEditorAssociationOverride">
         </editorAssociationOverride>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.ui.ide.workbench"
            description="enterpriseDomain Workbench Object Management Application."
            name="enterpriseDomain Workbench">
         <property
               name="windowImages"
               value="platform:/plugin/org.eclipse.emf.ecp.ui.e3/icons/bricks.png">
         </property>
         <property
               name="appName"
               value="enterpriseDomain Workbench">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.emf.ecp.core.ECPProject"
            class="org.enterprisedomain.workbench.ProjectAdapterFactory">
         <adapter
               type="org.enterprisedomain.classmaker.Contribution">
         </adapter>
         <adapter
               type="org.enterprisedomain.classmaker.Project">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.enterprisedomain.workbench.command.make"
            name="Make">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.enterprisedomain.workbench.handler.MakeHandler"
            commandId="org.enterprisedomain.workbench.command.make">
         <activeWhen>
            <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <or>
                        <adapt
                              type="org.eclipse.core.resources.IProject">
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="org.enterprisedomain.classmaker.projectNature">
                           </test>
                        </adapt>
                        <adapt
                              type="org.eclipse.emf.ecp.core.ECPProject">
                           <test
                                 property="org.enterprisedomain.ecp.isContribution"
                                 value="true">
                           </test>
                        </adapt>
                     </or>
                  </iterate>
               </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="org.enterprisedomain.workbench.command.make"
               style="push">
           <visibleWhen>
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <or>
                        <adapt
                              type="org.eclipse.core.resources.IProject">
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="org.enterprisedomain.classmaker.projectNature">
                           </test>
                        </adapt>
                        <adapt
                              type="org.eclipse.emf.ecp.core.ECPProject">
                           <test
                                 forcePluginActivation="true"
                                 property="org.enterprisedomain.ecp.isContribution"
                                 value="true">
                           </test>
                        </adapt>
                     </or>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
     

</plugin>
