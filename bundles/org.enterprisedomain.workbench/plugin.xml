<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <file-association
            content-type="org.eclipse.emf.ecore.xmi"
            file-extensions="xmi">
      </file-association>
      <file-association
            content-type="org.eclipse.emf.ecore"
            file-extensions="ecore,xmi">
      </file-association>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="org.enterprisedomain.workbench.Startup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.emf.ecp.application3x.perspective">
         <view
               id="org.eclipse.ui.console.ConsoleView"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.emf.ecp.ui.ModelRepositoriesView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.ui.ide.workbench"
            description="enterpriseDomain Workbench Object Management Application."
            name="enterpriseDomain Workbench">
         <property
               name="appName"
               value="enterpriseDomain Workbench">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.core.resources.IProject"
            class="org.enterprisedomain.workbench.ProjectAdapterFactory">
         <adapter
               type="org.enterprisedomain.classmaker.Contribution">
         </adapter>
         <adapter
               type="org.enterprisedomain.classmaker.Project">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.enterprisedomain.workbench.command.make"
            name="Make">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.enterprisedomain.workbench.handler.MakeHandler"
            commandId="org.enterprisedomain.workbench.command.make">
         <activeWhen>
            <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <or>
                        <adapt
                              type="org.eclipse.core.resources.IProject">
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="org.enterprisedomain.classmaker.contributionProjectNature">
                           </test>
                        </adapt>
                        <adapt
                              type="org.eclipse.emf.ecp.core.ECPProject">
                           <test
                                 property="org.enterprisedomain.ecp.isContribution"
                                 value="true">
                           </test>
                        </adapt>
                     </or>
                  </iterate>
               </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="org.enterprisedomain.workbench.command.make"
               style="push">
           <visibleWhen>
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <or>
                        <adapt
                              type="org.eclipse.core.resources.IProject">
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="org.enterprisedomain.classmaker.contributionProjectNature">
                           </test>
                        </adapt>
                        <adapt
                              type="org.eclipse.emf.ecp.core.ECPProject">
                           <test
                                 forcePluginActivation="true"
                                 property="org.enterprisedomain.ecp.isContribution"
                                 value="true">
                           </test>
                        </adapt>
                     </or>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
     <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.enterprisedomain.classmaker.parsley.category"
            class="org.enterprisedomain.workbench.NewProjectWizard"
            id="org.enterprisedomain.classmaker.parsley.wizards.new.project"
            name="Model Project"
            project="true">
         <selection
               class="org.eclipse.core.resources.IResource">
         </selection>
      </wizard>
      <category
            id="org.enterprisedomain.classmaker.parsley.category"
            name="Domain Creativity">
      </category>
      <wizard
            category="org.enterprisedomain.classmaker.parsley.category"
            class="org.enterprisedomain.workbench.NewContributionWizard"
            id="org.enterprisedomain.classmaker.parsley.wizard1"
            name="Meta-Model Contribution"
            project="true">
         <selection
               class="org.eclipse.core.resources.IResource">
         </selection>
      </wizard>
   </extension>

</plugin>
